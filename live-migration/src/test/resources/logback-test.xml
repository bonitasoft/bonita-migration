<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>|%d{HH:mm:ss.SSS}|%thread|%-5level|%logger{16}| %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="UNIT_TEST" class="org.bonitasoft.engine.migration.TestLoggerAppender"/>


    <logger name="org.bonitasoft" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="UNIT_TEST"/>
    </root>


</configuration>
