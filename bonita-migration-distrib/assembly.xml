<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id></id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<outputDirectory>lib</outputDirectory>
			<directory>lib</directory>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/main/groovy</directory>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/main/resources</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<excludes>
				<exclude>*.sh</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/main/resources</directory>
			<includes>
				<include>*.sh</include>
			</includes>
			<fileMode>0755</fileMode>
			<directoryMode>0644</directoryMode>
		</fileSet>
		<fileSet>
			<outputDirectory>versions/${next.bonita.version}/Bonita-home</outputDirectory>
			<directory>target/bonita-home</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>versions/${next.bonita.version}/Database/001_theme</outputDirectory>
			<directory>target/bonita-theme</directory>
			<includes>
				<include>bonita.css</include>
				<include>bonita-portal-theme.zip</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>org.codehaus.groovy:groovy-all</include>
			        <include>com.thoughtworks.xstream:xstream</include>
            			<include>commons-io:commons-io</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveFiltering>true</useTransitiveFiltering>
		</dependencySet>
	</dependencySets>
</assembly>
