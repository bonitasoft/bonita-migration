<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">

<properties>
    <comment>Bonita platform core database configuration</comment>

    <!-- PostgreSQL configuration -->

    <entry key="sql.delimiter">;</entry>

     <!-- Hibernate specific configuration -->
     <entry key="hibernate.journal.dialect">org.hibernate.dialect.PostgreSQLDialect</entry>
     <entry key="hibernate.journal.interceptor">org.bonitasoft.engine.persistence.PostgresInterceptor</entry>

     <!-- Quartz specific configuration -->
     <entry key="quartz.connection.jobstoredriver">org.quartz.impl.jdbcjobstore.PostgreSQLDelegate</entry>
</properties>
